<Controls:MetroWindow x:Class="auexpress.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="澳速通国际物流本地管理系统" WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  MaxHeight="60"/>
            <RowDefinition   MinHeight="200"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left"  Margin="15,5,0,5"> 
            <Button Width="60" Command="{Binding WaybillProcessingCommand}" Height="50" VerticalContentAlignment="Center" Background="{x:Null}" Margin="10,0,0,0">运单管理</Button>
        </DockPanel>
        <Frame x:Name="mainCount"  NavigationUIVisibility="Hidden" Grid.Row="1"  Margin="15,15,15,15" Content="{Binding MainCount}">
            
        </Frame>
    </Grid>
</Controls:MetroWindow>
